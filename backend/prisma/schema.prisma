generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Incident {
  id        String   @id @default(uuid())
  title     String
  service   String
  severity  String   // SEV1, SEV2, SEV3, SEV4
  status    String   @default("OPEN") // OPEN, MITIGATED, RESOLVED
  owner     String?
  summary   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([severity])
  @@index([status])
  @@index([service])
  @@index([createdAt])
  @@index([title])
}
